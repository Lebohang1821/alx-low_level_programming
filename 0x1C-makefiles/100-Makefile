CC = gcc

# Source files for program
SRC = main.c school.c

# Object files derived from source files
OBJ = $(SRC:.c=.o)

# Name of executable to be generated
NAME = school

# Command for removing files
RM = rm -f

# Compiler flags for additional warnings and errors
CFLAGS = -Wall -Werror -Wextra -pedantic

# Declare targets to avoid conflicts with file names
.PHONY: all clean oclean fclean re

# Rule to build executable 'school' with additional compiler flags
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# It clean up generated and temporary files
clean:
	$(RM) *~ $(NAME)

# It target to clean up object files
oclean:
	$(RM) $(OBJ)

# It target to clean up all generated files
fclean: clean oclean

re: fclean all
